<h1>Listing lines</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Ordering</th>
    <th>Sub section</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.text %></td>
    <td><%= line.ordering %></td>
    <td><%= line.sub_section_id %></td>
    <td><%= line.character_id %></td>
    <td><%= link_to 'Show', line %></td>
    <td><%= link_to 'Edit', edit_line_path(line) %></td>
    <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

