<h3>Characters</h3>
<table>
<% @play.characters.each do |character| %>
<tr>
	<td style="font-weight: bold"><%= character.name %></td>
	<td><%= character.description %></td>
    <td style="font-weight: bold"><%= character==@play.VOSD ? '' : (character.actor ? "Played by #{character.actor.name}": '(please edit and select)') %></td>

  <% if editable %>
	<td>
    <% if character != @play.VOSD %>
	  [
	    <%= link_to "delete", "/plays/#{@play.id}/characters/#{character.id}", :confirm => "Do you really want to delete #{character.name}?", :method => :delete %>,
	    <%= link_to "edit", edit_play_character_url(@play, character) %>
	  ]
	<% end %>
	</td>
	<% end %>
</tr>
<% end %>
</table>
